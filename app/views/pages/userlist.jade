extends ../layout

block content
    .container
        .row
            table.table.table-bordered.table-stripped.table-hover
                thead
                    tr
                        th.text-center 用户名
                        th.text-center 密码
                        th.text-center 时间
                        th.text-center 查看
                        th.text-center 更新
                        th.text-center 删除
                tbody
                    each item in users
                        tr.text-center(class="item-id-#{item._id}")
                            td= item.username
                            td= item.password
                            td= moment(item.meta.createAt).format('YYYY-MM-DD HH:MM:SS')
                            td: a(target="_blank" href="/detail/#{item._id}") 查看
                            td: a(target="_blank" href="/admin/update/#{item._id}") 修改
                            td: button.btn.btn-danger.del(type="button" data-id="#{item._id}") 删除
