extends ../layout

block content
    .container
        .row
            each item in movies
                .col-sm-3
                    .thumbnail
                        a(href="/movie/detail/#{item._id}")
                            img(src="#{item.poster}" alt="#{item.title}")
                        .caption.text-center
                            h3 #{item.title}
                            p: a.btn.btn-primary(href="/movie/detail/#{item._id}" role="button") 观看详情